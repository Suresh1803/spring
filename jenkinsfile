pipeline {
    agent any

    tools {
        maven 'maven'
        jdk 'JAVA_HOME'
    }

    stages {pipeline {
  agent any
  tools {
    maven 'maven'
  }
  stages {
    stage ('Build') {
      steps {
        bat 'mvn clean -Dmaven.test.skip package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
       sh 'java -jar C:\ProgramData\Jenkins\.jenkins\workspace\demo3\target\sprinboot-restapi-0.0.1-SNAPSHOT.jar'
        }
      }
    }
  }
  post { 
        always { 
            cleanWs()
        }
    }
}

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
                }
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
               script {
          sh 'nohup java -jar target/sprinboot-restapi-0.0.1-SNAPSHOT.jar'
        }
            }
        }
    }
}
