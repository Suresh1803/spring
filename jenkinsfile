pipeline {
    agent any

    tools {
        maven 'maven'
        jdk 'JAVA_HOME'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
                }
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
               script {
          sh 'nohup java -jar target/sprinboot-restapi-0.0.1-SNAPSHOT.jar'
        }
            }
        }
    }
}
