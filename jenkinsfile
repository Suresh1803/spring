pipeline {
  agent any
  tools {
    maven 'maven'
  }
  stages {
    stage ('Build') {
      steps {
        bat 'mvn clean -Dmaven.test.skip package'
      }
    }
    stage ('Deploy') {
      steps {
        script {
        deploy adapters: [tomcat9(credentialsId: '9a5a8882-d3e7-4751-baef-bea6e415142f', path: '', url: 'http://localhost:8080')], contextPath: null, war: '**/*.war'
        }
      }
    }
  }
  post { 
        always { 
            cleanWs()
        }
    }
}
